<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/SwipeRefreshLayout_Updates"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/ListView_Updates"
                android:divider="@drawable/divider"
                android:dividerHeight="0dp"
                android:transcriptMode="disabled"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImageView_ExpandedImage"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/black" />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/VideoView_ShareVideo"
            android:visibility="invisible"
            android:background="@android:color/black"
            android:layout_centerInParent="true" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProgressBar_BeforeUpdates"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/LinearLayout_NoServices" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_no_services"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_login"
            android:id="@+id/Button_ToSettings"
            android:layout_gravity="center_horizontal"
            android:singleLine="false" />

    </LinearLayout>

</RelativeLayout>