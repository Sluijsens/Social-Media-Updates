<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:background="@android:color/white">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/dark_red"
		android:clipToPadding="false"
		android:layout_margin="10dp">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:padding="8dp"
			android:id="@+id/LinearLayout_PersonInfo"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true">

			<ImageView
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:src="@android:drawable/ic_delete"
				android:adjustViewBounds="true"
				android:id="@+id/ImageView_Update"
				android:layout_marginRight="10dp"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<TextView
					android:layout_height="wrap_content"
					android:text="Persons name"
					android:layout_width="wrap_content"
					android:singleLine="true"
					android:textStyle="bold"
					android:id="@+id/TextView_UpdateName"
					android:textSize="18sp"/>

				<TextView
					android:layout_height="wrap_content"
					android:text="Text"
					android:layout_width="wrap_content"
					android:id="@+id/TextView_UpdateMessage"
					android:linksClickable="true"
					android:autoLink="all"
					android:textSize="14sp"
					android:fontFamily="sans-serif-light"
					android:textColorLink="@drawable/link_color"/>

			</LinearLayout>

		</LinearLayout>

		<nl.sluijsens.socialmediaupdate.ImageView16x9
			android:layout_width="match_parent"
			android:id="@+id/ImageView_ShareImage"
			android:adjustViewBounds="true"
			android:layout_height="50dp"
			android:src="@android:drawable/screen_background_dark"
			android:layout_centerVertical="true"
			android:layout_below="@+id/LinearLayout_PersonInfo"
			android:background="@drawable/imageview_background"
			android:scaleType="fitCenter"/>

		<LinearLayout
			android:id="@+id/LinearLayout_LinkedInUpdateShareContent"
			android:background="@drawable/background_red"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/ImageView_ShareImage"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:layout_height="wrap_content"
				android:text="Text"
				android:layout_width="match_parent"
				android:textStyle="bold|italic"
				android:id="@+id/TextView_LinkedInShareTitle"
				android:textSize="14sp"
				android:textColor="@color/text_color_red_background"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Text"
				android:layout_width="match_parent"
				android:id="@+id/TextView_LinkedInShareDescription"
				android:textSize="14sp"
				android:fontFamily="sans-serif-light"
				android:textStyle="italic"
				android:textColor="@color/text_color_red_background"/>

		</LinearLayout>

	</RelativeLayout>

</RelativeLayout>

