<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/background_light_grey">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_margin="8dp"
		android:gravity="center_vertical">

		<ImageView
			android:layout_height="32dp"
			android:layout_width="32dp"
			android:src="@android:drawable/ic_delete"
			android:layout_marginRight="8dp"
			android:id="@+id/ImageView_ServiceIcon"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="@string/settings_linkedin"
			android:layout_width="wrap_content"
			android:textSize="14sp"
			android:textStyle="bold"
			android:id="@+id/TextView_Settings"
			android:textColor="@color/text_color_light_grey_background"/>

	</LinearLayout>

	<View
		android:layout_height="1dp"
		android:background="@drawable/divider"
		android:layout_width="match_parent"
		android:id="@+id/View_SettingsDivider"/>

</LinearLayout>

